{
  "name": "miaoda",
  "private": true,
  "workspaces": [
    "core",
    "web-app",
    "extensions-web"
  ],
  "scripts": {
    "lint": "yarn workspace @miaoda/web-app lint",
    "dev": "yarn config:validate && yarn dev:tauri",
    "build": "yarn config:validate && yarn build:web && yarn build:tauri",
    "test": "yarn config:validate test && vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:prepare": "yarn build:icon && yarn copy:assets:tauri && yarn build --no-bundle ",
    "config:load": "node ./scripts/config-manager.mjs load",
    "config:validate": "node ./scripts/validate-config.mjs",
    "config:validate:files": "node ./scripts/validate-config.mjs files",
    "config:validate:env": "node ./scripts/validate-config.mjs environments",
    "config:report": "node ./scripts/validate-config.mjs report",
    "config:export": "node ./scripts/config-manager.mjs export",
    "config:get": "node ./scripts/config-manager.mjs get",
    "dev:web": "yarn workspace @miaoda/web-app dev",
    "dev:web-app": "yarn build:extensions-web && yarn workspace @miaoda/web-app install && yarn workspace @miaoda/web-app dev:web",
    "dev:tauri": "yarn build:icon && yarn copy:assets:tauri && cross-env IS_CLEAN=true tauri dev",
    "build:web-app": "yarn build:extensions-web && yarn workspace @miaoda/web-app install && yarn workspace @miaoda/web-app build:web",
    "serve:web-app": "yarn workspace @miaoda/web-app serve:web",
    "build:serve:web-app": "yarn build:web-app && yarn serve:web-app",
    "copy:assets:tauri": "cpx \"pre-install/*.tgz\" \"src-tauri/resources/pre-install/\" && cpx \"LICENSE\" \"src-tauri/resources/\"",
    "download:lib": "node ./scripts/download-lib.mjs",
    "download:bin": "node ./scripts/download-bin.mjs",
    "build:tauri:win32": "yarn download:bin && yarn tauri build",
    "build:tauri:linux": "yarn download:bin && NO_STRIP=1 ./src-tauri/build-utils/shim-linuxdeploy.sh yarn tauri build --verbose && ./src-tauri/build-utils/buildAppImage.sh",
    "build:tauri:darwin": "yarn tauri build --target aarch64-apple-darwin",
    "build:tauri": "yarn build:icon && yarn copy:assets:tauri && run-script-os",
    "build:tauri:plugin:api": "cd src-tauri/plugins && yarn install && yarn workspaces foreach -Apt run build",
    "build:icon": "tauri icon ./src-tauri/icons/icon.png",
    "build:core": "cd core && yarn build && yarn pack",
    "build:web": "yarn workspace @miaoda/web-app build",
    "build:extensions-web": "yarn workspace @miaoda/extensions-web build",
    "build:extensions": "rimraf ./pre-install/*.tgz || true && yarn workspace @miaoda/core build && cd extensions && yarn install && yarn workspaces foreach -Apt run build:publish",
    "prepare": "husky"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.7.0",
    "@vitest/coverage-v8": "^3.1.3",
    "concurrently": "^9.1.0",
    "cpx": "^1.5.0",
    "cross-env": "^7.0.3",
    "happy-dom": "^15.11.6",
    "husky": "^9.1.5",
    "jsdom": "^26.1.0",
    "nyc": "^17.1.0",
    "rimraf": "^3.0.2",
    "run-script-os": "^1.1.6",
    "tar": "^4.4.19",
    "unzipper": "^0.12.3",
    "vitest": "^3.1.3",
    "wait-on": "^7.0.1"
  },
  "version": "0.0.0",
  "installConfig": {
    "hoistingLimits": "workspaces",
    "selfReferences": false
  },
  "resolutions": {
    "yallist": "4.0.0",
    "@tauri-apps/cli": "2.7.0",
    "typescript": "~5.8.3",
    "vite": "^6.3.0",
    "vitest": "^3.1.3",
    "rollup": "^4.0.0",
    "esbuild": "^0.24.0"
  },
  "packageManager": "yarn@4.5.3",
  "engines": {
    "node": ">=20.18.0",
    "yarn": ">=4.5.0"
  },
  "dependencies": {
    "@radix-ui/react-tabs": "^1.1.13",
    "@tanstack/react-virtual": "^3.13.12",
    "@types/react-syntax-highlighter": "^15.5.13",
    "dotenv": "^17.2.2",
    "download-cli": "^1.1.1",
    "react-syntax-highlighter": "^15.6.6"
  }
}
